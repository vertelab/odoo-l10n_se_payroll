      <field name="salary_art">140</field>
      <field name="sequence">10</field>
      <field name="appears_on_payslip" eval="True" />
      <field name="condition_select">python</field>
      <field name="condition_python">result = contract.get_leave_days('l10n_se_hr_payroll.sick_leave_qualify', worked_days) &gt; 0.0</field>
      <field name="amount_select">code</field>
      <field name="amount_python_compute">
#(ML*12)/(52*VA)
result_qty = contract.get_leave_days('l10n_se_hr_payroll.sick_leave_qualify', worked_days)
# result_rate = 150
result = contract.wage / 20
